---
import "styles/globals.css";

import AppLayout from "~/components/app/AppLayout";
import BlogEntry from "~/components/app/blog/BlogEntry";
import BlogSubHeader from "~/components/app/blog/BlogSubHeader";
import Head from "~/layouts/components/Head.astro";

const { title, description, content } = Astro.props;

export type Props = {
  title?: string;
  description?: string;
};
---

<!DOCTYPE html>
<html lang="en">
  <Head title={title} pageType={"blog"} description={description} />
  <AppLayout currentPathName={Astro.url.pathname} client:visible>
    <BlogSubHeader
      date={content.date}
      title={content.title}
      hidden={content.hidden}
    />
    <BlogEntry>
      <slot />
    </BlogEntry>
  </AppLayout>
</html>
