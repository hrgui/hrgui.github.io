---
import "styles/globals.css";

import AppLayout from "~/components/app/AppLayout";
import BlogEntry from "~/components/app/blog/BlogEntry";
import BlogSubHeader from "~/components/app/blog/BlogSubHeader";
import Head from "~/layouts/components/Head.astro";

export type Props = {
  title?: string;
  excerpt?: string;
  date?: string;
  hidden?: boolean;
};

const { title, excerpt, date, hidden } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <Head title={title} pageType={"blog"} description={excerpt} />
  <AppLayout currentPathName={Astro.url.pathname} client:visible>
    <BlogSubHeader date={date} title={title} hidden={hidden} />
    <BlogEntry>
      <slot />
    </BlogEntry>
  </AppLayout>
</html>
